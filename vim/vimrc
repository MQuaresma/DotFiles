"""""""""""""""Plugin manager""""""""""""""" 
call plug#begin()

Plug 'w0rp/ale'                         "syntax checking
Plug 'neo4j-contrib/cypher-vim-syntax'  "cypher syntax highlighting
Plug 'ervandew/supertab'                "tab completion
Plug 'jiangmiao/auto-pairs'             "open and close parenthesis automaticaly
Plug 'junegunn/goyo.vim'                "distraction free mode
Plug 'tomasiser/vim-code-dark'          "VSCode like colorscheme for vim
Plug 'itchyny/lightline.vim'            "lightweight status line


call plug#end()            
filetype plugin indent on    
""""""""""""""""""""""""""""""""""""""""""""""""""" 
"Map j+k k+j to go back to command mode
inoremap jk <ESC>
inoremap kj <ESC>

"Map Leader
let mapeleader=";"

"Ale Autocomplete
"As of now, only supports TypeScript
"let g:ale_completion_enabled = 1
nmap <silent> <C-k> :ALEPreviousWrap<CR>
nmap <silent> <C-j> :ALENextWrap<CR>

"Bind noh to <C-n>
map <C-n> :noh<CR> 
"Disable arrow-keys
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
imap <right> <nop>
imap <left> <nop>
imap <up> <nop>
imap <down> <nop>

"Map Ctrl+key to move between windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" Remap 0 to first non-blank character
map 0 ^

"Treat long lines as break lines
map j gj
map k gk

"Color related configs
syntax enable                   " Enable syntax highlighting
set background=dark
set t_Co=256
colorscheme codedark

set number
set relativenumber
set cursorline

"Search options
set ignorecase  "Ignore case when searching
set incsearch   "Instant search

"Command listing
set wildmenu
set path+=**

"Vim status line
set laststatus=2
"set statusline=%F%m%=\ %y\ %L\ %m

"Turn most backup options off
set nobackup
set nowb
set noswapfile

"Use spaces instead of tabs
set expandtab

"Fold idented code
"set foldmethod=indent
"set foldlevel=1

"Be smart when using tabs ;)
set smarttab

"1 tab = 4 spaces
set shiftwidth=4
set tabstop=4


set ai "Auto indent
set si "Smart indent

set lazyredraw "Keeps vim from redrawing the window so often

set mat=2
set encoding=utf-8
set showmatch
set nocompatible
