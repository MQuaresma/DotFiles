# Environment variables
export PATH=$HOME/bin:/usr/local/bin:$PATH
export ZSH=~/.oh-my-zsh
export MANPATH=$MANPATH:/usr/local/texlive/2018/texmf-dist/doc/man
export INFOPATH=$INFOPATH:/usr/local/texlive/2018/texmf-dist/doc/info
export EDITOR=vim
export GPG_TTY=$(tty)
export DYLD_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/usr/local/opt/libomp/include

ZSH_THEME="robbyrussell"

export UPDATE_ZSH_DAYS=7

plugins=(git)

source $ZSH/oh-my-zsh.sh

# Aliases
alias sudoedit="sudo -e"
alias brew_maintain="brew upgrade && brew update && brew doctor && brew cleanup && rm -rf ~/Library/Caches/Homebrew"
alias py="python3"
alias latex_clean="rm *.log *.aux *.toc"
