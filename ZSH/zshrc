# Environment variables
export PATH=$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/local/opt/python/libexec/bin:$PATH
export MANPATH=$MANPATH:/usr/local/texlive/2018/texmf-dist/doc/man
export INFOPATH=$INFOPATH:/usr/local/texlive/2018/texmf-dist/doc/info
export EDITOR=vim
export GPG_TTY=$(tty)

# ZSH
export ZSH=$HOME/.oh-my-zsh
export UPDATE_ZSH_DAYS=7
ZSH_THEME="nameless"

plugins=(git)

source $ZSH/oh-my-zsh.sh

# opam configuration
test -r $HOME/.opam/opam-init/init.zsh && . $HOME/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# Aliases
alias py="python3"
alias latex_clean="rm -f *.log *.aux *.toc"

# Functions
pandoc_pdf(){
    pandoc $1 -V geometry:margin=1.5cm -o $2
}


# set macOS specific ENV VARS
if [ "$(uname)" = "Darwin" ] ; then
    export DYLD_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/usr/local/opt/libomp/include
    alias sudoedit="sudo -e"
    alias brew_maintain="brew update && brew upgrade && brew cask upgrade &&  brew doctor && brew cleanup && rm -rf ~/Library/Caches/Homebrew"
fi
zstyle ':completion:*:ssh:*' hosts off
