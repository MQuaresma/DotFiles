# Environment variables
export PATH=$HOME/bin:/usr/local/bin:/usr/local/platform-tools/:$PATH

export ZSH=~/.oh-my-zsh
export MANPATH=$MANPATH:/usr/local/texlive/2018/texmf-dist/doc/man
export INFOPATH=$INFOPATH:/usr/local/texlive/2018/texmf-dist/doc/info
export DYLD_LIBRARY_PATH=/usr/local/opt/unicorn/lib/:$DYLD_LIBRARY_PATH

export EDITOR=vim

# Set this to "random" to load a random theme each time
ZSH_THEME="lambda"

# Update frequency
export UPDATE_ZSH_DAYS=7

# Enable command auto-correction.
ENABLE_CORRECTION="true"

# DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(git)

source $ZSH/oh-my-zsh.sh

# User configuration

# ssh-agent autostart
if ! pgrep -u "$USER" ssh-agent > /dev/null; then
    ssh-agent > ~/.ssh-agent-config
fi
if [[ "$SSH_AGENT_PID" == "" ]]; then
    eval "$(<~/.ssh-agent-config)" >> /dev/null
fi
# export SSH_KEY_PATH="~/.ssh/rsa_id"
alias sudoedit="sudo -e"
